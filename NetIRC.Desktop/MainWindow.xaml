<mah:MetroWindow x:Class="NetIRC.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:NetIRC.Desktop.ViewModels"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:NetIRC.Desktop"
        mc:Ignorable="d"
        x:Name="mainWindow"
        FontSize="14"
        Title="NetIRC Desktop"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        ShowIconOnTitleBar="True">

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Content="Settings" x:Name="SettingsButton" ToolTip="Settings">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <iconPacks:PackIconBoxIcons Width="18"
                                    Height="18"
                                    VerticalAlignment="Center"
                                    Kind="SolidCog" />
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="About" x:Name="AboutButton" ToolTip="About">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <iconPacks:PackIconBoxIcons Width="18"
                                    Height="18"
                                    VerticalAlignment="Center"
                                    Kind="SolidHelpCircle" />
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <Grid Background="WhiteSmoke">

        <TabControl x:Name="TabControl" ItemsSource="{Binding Tabs}" TabStripPlacement="Left" Padding="0">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel MinWidth="120">
                        <TextBlock Text="{Binding}" FontFamily="{StaticResource MesloLGS}" FontSize="14" />
                    </DockPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.Resources>
                <DataTemplate DataType="{x:Type viewModels:ChannelViewModel}" >
                    <DataTemplate.Resources>
                        <Style TargetType="ItemsControl" x:Key="ChatViewerStyle">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <ScrollViewer CanContentScroll="True">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="ItemsPanel">
                                <Setter.Value>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel  IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <DataTemplate DataType="{x:Type viewModels:Message}">
                            <Grid IsSharedSizeScope="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Timestamp, StringFormat=[\{0:HH:mm\}]}" Grid.Column="0" FontWeight="Bold" Margin="5,0,5,0"/>
                                <TextBlock Text="{Binding From}" Grid.Column="1" FontWeight="Bold" Margin="10,0,10,0" HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding Text}" Grid.Column="2"  TextWrapping="Wrap"/>
                            </Grid>
                        </DataTemplate>

                    </DataTemplate.Resources>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <DockPanel>
                            <ItemsControl ItemsSource="{Binding Messages}" Style="{StaticResource ChatViewerStyle}">
                                <ItemsControl.Template>
                                    <ControlTemplate>
                                        <ScrollViewer CanContentScroll="True">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </DockPanel>

                        <GridSplitter HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Grid.Column="1"
                            Grid.Row="0"
                            ResizeBehavior="PreviousAndNext"
                            Width="1" Background="#41B1E1" />

                        <ListBox x:Name="UsersListView" Grid.Column="2" Grid.Row="0" ItemsSource="{Binding Channel.Users}" Loaded="UsersListView_Loaded">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <GridSplitter VerticalAlignment="Bottom"
                            HorizontalAlignment="Stretch"
                            Grid.ColumnSpan="3"
                            Grid.Row="1" 
                            Height="1" Background="#41B1E1" IsEnabled="False" />

                        <DockPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Height="30">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" BorderThickness="0" VerticalAlignment="Stretch" VerticalContentAlignment="Center">
                                    <TextBox.InputBindings>
                                        <KeyBinding Command="{Binding SendMessageCommand}" Key="Return" />
                                    </TextBox.InputBindings>
                                </TextBox>
                                <Button Grid.Column="1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding SendMessageCommand}">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <iconPacks:PackIconBoxIcons Width="18"
                                                Height="18"
                                                VerticalAlignment="Center"
                                                Kind="RegularSend" />
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels:QueryViewModel}" >
                    <DataTemplate.Resources>
                        <Style TargetType="ItemsControl" x:Key="ChatViewerStyle">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <ScrollViewer CanContentScroll="True">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="ItemsPanel">
                                <Setter.Value>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <DataTemplate DataType="{x:Type viewModels:Message}">
                            <Grid IsSharedSizeScope="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Timestamp, StringFormat=[\{0:HH:mm\}]}" Grid.Column="0" FontWeight="Bold" Margin="5,0,5,0"/>
                                <TextBlock Text="{Binding From}" Grid.Column="1" FontWeight="Bold" Margin="10,0,10,0"/>
                                <TextBlock Text="{Binding Text}" Grid.Column="2"  TextWrapping="Wrap"/>
                            </Grid>
                        </DataTemplate>

                    </DataTemplate.Resources>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0">
                            <ItemsControl ItemsSource="{Binding Messages}" Style="{StaticResource ChatViewerStyle}">
                                <ItemsControl.Template>
                                    <ControlTemplate>
                                        <ScrollViewer CanContentScroll="True">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </DockPanel>

                        <GridSplitter VerticalAlignment="Bottom"
                            HorizontalAlignment="Stretch"
                            Grid.Row="1" 
                            Height="1" Background="#41B1E1" IsEnabled="False" />

                        <DockPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Height="30">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" BorderThickness="0" VerticalAlignment="Stretch" VerticalContentAlignment="Center">
                                    <TextBox.InputBindings>
                                        <KeyBinding Command="{Binding SendMessageCommand}" Key="Return" />
                                    </TextBox.InputBindings>
                                </TextBox>
                                <Button Grid.Column="1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding SendMessageCommand}">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <iconPacks:PackIconBoxIcons Width="18"
                                                Height="18"
                                                VerticalAlignment="Center"
                                                Kind="RegularSend" />
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels:ServerViewModel}">
                    <DataTemplate.Resources>
                        <Style TargetType="ItemsControl" x:Key="ChatViewerStyle">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <ScrollViewer CanContentScroll="True">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="ItemsPanel">
                                <Setter.Value>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <DataTemplate DataType="{x:Type viewModels:Message}">
                            <Grid IsSharedSizeScope="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Timestamp, StringFormat=[\{0:HH:mm\}]}" Grid.Column="0" FontWeight="Bold" Margin="5,0,5,0"/>
                                <TextBlock Text="{Binding Text}" Grid.Column="1"  TextWrapping="Wrap" Margin="10,0,0,0"/>
                            </Grid>
                        </DataTemplate>

                    </DataTemplate.Resources>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Column="0" Grid.Row="0">
                            <ItemsControl ItemsSource="{Binding Messages}" Style="{StaticResource ChatViewerStyle}">
                                <ItemsControl.Template>
                                    <ControlTemplate>
                                        <ScrollViewer CanContentScroll="True">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </DockPanel>

                        <GridSplitter VerticalAlignment="Bottom"
                            HorizontalAlignment="Stretch"
                            Grid.Row="1" 
                            Height="1" Background="#41B1E1" IsEnabled="False" />

                        <DockPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Height="30">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" BorderThickness="0" VerticalAlignment="Stretch" VerticalContentAlignment="Center">
                                    <TextBox.InputBindings>
                                        <KeyBinding Command="{Binding SendMessageCommand}" Key="Return" />
                                    </TextBox.InputBindings>
                                </TextBox>
                                <Button Grid.Column="1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding SendMessageCommand}">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <iconPacks:PackIconBoxIcons Width="18"
                                                Height="18"
                                                VerticalAlignment="Center"
                                                Kind="RegularSend" />
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>

    </Grid>
</mah:MetroWindow>
